<% for(var index = 0; index < data.length; index++) { %>
<div class="col-md-4">
    <div class="card card-user">
        <div class="image" style="height: 300px">
            <img src="/public/content/movie/image/<%= data[index].cover %>.gif"
                 alt="book cover">
        </div>
        <div class="card-body">
            <div class="author">
                <a href="#">
                    <img class="avatar border-gray"
                         src="/public/content/movie/image/<%= data[index].cover %>.gif"
                         alt="book cover">
                    <h5 class="title"> <%= data[index].title %></h5>
                </a>
                <p class="description">
                    <%= data[index].recommend %> / 10
                </p>
            </div>
            <hr>
            <p class="description text-center">
                <%= data[index].summary %>
            </p>
        </div>
